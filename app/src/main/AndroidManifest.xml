<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <application
        android:name=".TheNotes"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.TheNotes">
        <provider
            android:authorities="com.example.thenotes.fileprovider"
            android:exported="false"
            tools:node="replace"
            android:grantUriPermissions="true"
            android:name="androidx.core.content.FileProvider">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
        <activity
            android:name=".ShareActivity"
            android:exported="false"
            android:label="@string/title_activity_share"
            android:theme="@style/Theme.TheNotes" />
        <activity
            android:name=".EditItemProduk"
            android:exported="false"
            android:label="@string/title_activity_edit_item_produk"
            android:theme="@style/Theme.TheNotes" />
        <activity
            android:name=".AddProdukActivity"
            android:exported="false"
            android:label="@string/title_activity_add_produk"
            android:theme="@style/Theme.TheNotes" />
        <activity
            android:name=".DetailNota"
            android:exported="false"
            android:label="@string/title_activity_detail_nota"
            android:theme="@style/Theme.TheNotes" />
        <activity
            android:name=".TambahCustomerActivity"
            android:exported="false"
            android:label="@string/title_activity_tambah_customer"
            android:theme="@style/Theme.TheNotes" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TheNotes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>